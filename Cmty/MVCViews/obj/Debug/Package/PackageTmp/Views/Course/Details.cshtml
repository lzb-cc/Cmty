@model MVCViews.Models.CourseViewModels

@{
    ViewBag.Title = "Details";
}

<h2>课程信息</h2>

<div>
    <h4>详细信息</h4>
    <hr />



    <div class="div-inline">
        <div class="div-img"><img id="course_pic" src="http://localhost:8090/ImageUrl/@Model.PicUrl" /></div>
    </div>
    <div>
        <div>课程名称： @Model.Name</div>
        <div>授课学校： @Model.University</div>
        <div>授课教师： @foreach (var item in ViewBag.Teacher) { <label>@item</label>}</div>
        <div>课程简介： @Model.Desp</div>

        <hr />
        <div>
            <textarea placeholder="输入内容..." class="form-control" id="comment_edit"></textarea>
            <input type="button" value="添加评论" class="btn btn-warning" onclick="AddComments('@Model.Code')" />
            <input type="button" value="返回上一页" class="btn" onclick='Back()' />
        </div>

    </div>
    
    
    <hr style="clear:both"/>
    <div>
        <h3>用户评论</h3>
        @foreach (var cmt in ViewBag.CmtList)
        {
            <hr style="clear:both"/>
            <div class="div-inline-comment">
                <img class="user_pic" src="http://localhost:8090/ImageUrl/@cmt.UserAvatar" />
            </div>
            <div class="div-inline-comment">
                <div><span>@cmt.Floor 楼</span>    <span>@cmt.UserName</span></div>
                <div>@cmt.Date</div>
                <div>@cmt.Content</div>
                @if(cmt.UserEmail.Equals(Request.Cookies.Get("ApplicationCookie")?.Value))
                {
                    <input type="button" value="撤销" class="btn btn-danger" onclick="DropOff(@cmt.Id)" />
                }
            </div>
        }
    </div>

</div>

<style>
    .div-inline {
        width: 300px;
        height: 400px;
        display: inline;
        float: left;
        margin-left: 20px;
        margin-top: 20px;
        margin-right: 20px;
        margin-bottom: 50px;
    }

    .div-inline-comment {
        width: 150px;
        height: 150px;
        display:inline;
        float:left;
        margin-left:20px;
        margin-top:20px;
        margin-right:20px;
        margin-bottom:30px;
    }

    img #course_pic{
        width: 100%;
        height: 100%;
        max-width: 300px;
        max-height:400px;
    }

    .user_pic {
        width: 100%;
        height: 100%;
        max-height: 150px;
        max-width: 150px;
    }
</style>

<script>
    function Back() {
        window.history.back(-1);
    }

    function DropOff(id) {
        var params = { id: id, }

        if (id <= 0) {
            return;
        }

        $.ajax({
            url: "/Course/CommentCancel",
            type: "post",
            dataType: "json",
            data: params,
        }).done(function (json) {
            alert(json.Msg);
            if (json.Status == 0) {
                location.reload();
            } else if (json.Status == 1) {
                window.location.href = "/Account/Login";
            }
        })
    }

    function AddComments(code) {
        var params = {
            code: code,
            content: $("#comment_edit").val(),
        }

        if (code.length == 0) {
            return;
        }

        if (params.content.length == 0) {
            alert("评论不能为空!");
            return;
        }

        $.ajax({
            url: "/Course/MakeComment",
            type: "post",
            dataType: "json",
            data: params,
        }).done(function (json) {
            if (json.Status == 0) {
                alert("评论成功!");
                location.reload();
            } else if (json.Status == 1) {
                alert(json.Msg);
                window.location.href = "/Account/Login";
            }
        })
    }
</script>

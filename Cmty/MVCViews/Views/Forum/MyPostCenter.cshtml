@model IEnumerable<MVCViews.Models.PostViewModel>

@{
    ViewBag.Title = "MyPostCenter";
}

<h2>我的帖子</h2>

<p>
    <input type="button" class="btn btn-success"value="我要发帖" onclick="Redirect('/Forum/AddPost/')" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoComments)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublishDate)
        </td>
        <td>
            <font color="@(item.NoComments > 0 ? "red" : "green")">@(item.NoComments > 0 ? "是" : "否")</font>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<script>
    $(function () {
        var no_comment = document.getElementById("item_NoComments").innerText;
        document.getElementById("no_comments").setAttribute("innerText", no_comment > 0 ? "是" : "否")
    })

    function Redirect(url) {
        window.location.href = url;
    }
</script>
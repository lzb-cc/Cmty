
@{
    ViewBag.Title = "Index";
}

<div>
<font size="5">批量导入数据： </font>
<input type="file" onchange="Upload()" id="select_data_file" class="form-control"/>
</div>

<hr />
<div>
<font size="5">敏感词管理：</font>
<input type="button" class="btn btn-default" onclick="Redirect('/Other/FilterList')" value="跳转"/>    
</div>


<hr />
<div>
<font size="5">用户找回面管理</font>
<input type="button" class="btn btn-default" onclick="Redirect('/Other/ForgotPasswordList')" value="跳转" />
</div>

<script>
    function Redirect(url) {
        window.location.href = url;
    }

    function Upload() {
        var file_name = document.getElementById("select_data_file").value.split("\\");
        if (file_name.length <= 0) {
            return;
        }

        href = "/Other/UploadData?fileName=" + file_name[file_name.length - 1];
        window.location.href = href;
    }
</script>
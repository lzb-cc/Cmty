@model IEnumerable<Admin.AccountService.ForgotPasswordView>

@{
    ViewBag.Title = "ForgotPasswordList";
}

<h2>找回密码审核列表</h2>


<table class="table">
    <tr>

        <th>
            注册邮箱
        </th>
        <th>
            用户名
        </th>
        <th>
            用户昵称
        </th>
        <th>
            性别
        </th>
        <th>
            联系方式
        </th>
        <th>
            审核状态
        </th>
        <th>
            提交日期
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nick)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>
            <td>
                @if (item.Status == 0)
                {
                    <font color="red">未审核</font>
                }
                else if(item.Status == 1)
                {
                    <font color="green">审核通过</font>
                }
                else if (item.Status == 2)
                {
                    <font color="red">审核未通过</font>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @if (item.Status == 0)
                {
                    @Html.ActionLink("审核", "ForgotPasswordDetails", new { id = item.Id })
                }
                else
                {
                    @Html.ActionLink("删除记录", "DeleteForgotPasswordRecords", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
